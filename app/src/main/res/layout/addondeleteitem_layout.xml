<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FoodDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="8dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:id="@+id/imgplay"
            android:layout_centerVertical="true"
            android:tint="@android:color/darker_gray"
            android:src="@drawable/ic_fiber_manual_record_black_24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hazy Hazelnut"
            android:layout_toRightOf="@+id/imgplay"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:id="@+id/txtaddonitemname"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtaddonitemprice"
            android:layout_toLeftOf="@+id/imgdeleteaddon"
            android:layout_centerVertical="true"
            android:text="Rs.30"
            android:textColor="@android:color/black"
            android:textSize="13dp"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/imgdeleteaddon"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@android:color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/imgdeleteaddon"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>