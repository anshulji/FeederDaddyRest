<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tbeditprofile"
        android:elevation="4dp"
        android:layout_marginBottom="4dp"
        android:padding="10dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="@android:color/darker_gray"
            android:id="@+id/imggoback"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Restaurant Profile"
            />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tbeditprofile"
        app:layout_constraintBottom_toTopOf="@+id/btnupdate"
        android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:id="@+id/imgrestimg"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:tint="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:background="@drawable/ic_fiber_manual_record_black_24dp"
                android:backgroundTint="#90000000"
                android:id="@+id/imgeditrestimg"
                android:padding="15dp"
                />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="4dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ordermeallogo"
                    android:layout_marginRight="10dp"
                    android:tint="@android:color/darker_gray"
                    android:layout_height="30dp" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtrestaurantname"
                    android:hint="Restaurant Name"
                    android:textColorHint="@android:color/black"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:inputType="textPersonName"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@android:color/black"
                    app:met_singleLineEllipsis="true"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_ordermeallogo"
                        android:layout_marginRight="10dp"
                        android:tint="@android:color/darker_gray"
                        android:layout_height="30dp" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGrouphideshow"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show"
                            android:id="@+id/radioshow"
                            android:checked="false"
                            android:textSize="20dp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hide"
                            android:id="@+id/radiohide"
                            android:checked="false"
                            android:textSize="20dp"
                            />
                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_marginRight="10dp"
                        android:tint="@android:color/darker_gray"
                        android:layout_height="30dp" />
                    <!--com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtopenclosetime"
                        android:hint="Open-Close time"
                        android:textColorHint="@android:color/black"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:inputType="textPersonName"
                        app:met_baseColor="@android:color/black"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        /-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:weightSum="11"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Open Time"
                                />
                            <Button
                                android:layout_width="match_parent"
                                android:text="SET"
                                android:id="@+id/btnopentime"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="40dp"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Close Time"
                                />
                            <Button
                                android:layout_width="match_parent"
                                android:text="SET"
                                android:id="@+id/btnclosetime"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                    </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_restaurant_black_24dp"
                    android:layout_marginRight="10dp"
                    android:tint="@android:color/darker_gray"
                    android:layout_height="30dp" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroupVegNonVeg"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Veg"
                        android:id="@+id/radioveg"
                        android:checked="false"
                        android:textSize="20dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NonVeg"
                        android:id="@+id/radiononveg"
                        android:checked="false"
                        android:textSize="20dp"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Both"
                        android:id="@+id/radiovegnon"
                        android:checked="true"
                        android:textSize="20dp"
                        />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:layout_marginRight="10dp"
                    android:tint="@android:color/darker_gray"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtphonenumber"
                    android:hint="Phone"
                    android:textColorHint="@android:color/black"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:inputType="phone"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@android:color/black"
                    app:met_singleLineEllipsis="true"
                    />
            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_place_black_24dp"
                android:layout_marginRight="10dp"
                android:tint="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtrestaurantaddress"
                    android:hint="Restaurant Area Name"
                    android:textColorHint="@android:color/black"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:inputType="text"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@android:color/black"
                    app:met_singleLineEllipsis="true"
                    />

                    <!-- com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtLocation"
                    android:hint="Locality/Location"
                    android:textColorHint="@android:color/black"
                    android:text=""
                    android:textColor="@android:color/black"34
                    android:textSize="34dp"
                    android:inputType="text"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@android:color/black"
                    app:met_singleLineEllipsis="true"
                    / -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant Location"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:textColor="@android:color/darker_gray"
                    />
                <fragment
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:paddingVertical="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="15dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/black"
                    android:layout_height="35dp"
                    android:background="@drawable/et_bg"
                    android:id="@+id/place_autocomplete_fragment"
                    android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="4dp"
                    ></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:id="@+id/checkbox"
                        android:checked="false"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detect My Location"
                        android:textSize="15dp"
                        android:id="@+id/txtdml"
                        android:textColor="@android:color/black"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:text="Update"
        android:id="@+id/btnupdate"
        android:layout_marginHorizontal="8dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:shadowColor="@android:color/black"
        android:layout_height="wrap_content"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="10dp"
        android:layout_margin="8dp"
        app:fButtonColor="#1e90ff"
        />

</android.support.constraint.ConstraintLayout>